@Slf4j
@Controller
@RequestMapping("/issue/{proSn}")
public class IssueController {
	
	
	
	@Inject
	private ProjectService pService;
	
	@Inject
	private IssueService service;
	
	@Inject
	private JobService jService;
	
	
	//칸반보드로 수정하기
	@PutMapping("update")
	public String modifyIssue(
		@RequestBody IssueVO issueVO
		,@PathVariable String proSn
		,Model model
		) {
		
		ServiceResult result = service.modifyIssue(issueVO);
		model.addAttribute("result", result);
		return "jsonView";
	}
	
	

	@PostMapping("insert")
	@ResponseBody
	public Map<String,String> insertIssue(
		IssueVO iVO
		, @PathVariable String proSn
		, Authentication principal 
		){
		
		Map<String, String> map = new HashMap<String, String>();
		
		String loginEmpCd = principal.getName();
		
		iVO.setEmpCd(loginEmpCd);
		iVO.setProSn(proSn);
		
		//이슈등록
		ServiceResult result =service.createIssue(iVO);
		
		switch (result) {
		case OK:
			map.put("success", "Y");
			break;

		default:
			map.put("success", "N");
			break;
		}
		return map;
	}
	
	
	
	
	
	@GetMapping("home")
	public String issueHome(
		Authentication principal 
		, Model model
		, @PathVariable String proSn
		) {
		model.addAttribute("proSn" ,proSn);
		String empCd = principal.getName();
		
		//프로젝트명 목록
		List<ProjectVO> proj = pService.selectProjectList(empCd);
		model.addAttribute("proj", proj);
		System.out.println(proj);
		
		//일감목록
		List<PjobVO> job = jService.retrieveUJobList(proSn);
		model.addAttribute("jobList", job);
		
		
		return "issue/issueHome";
	}
	
	//이슈 상태에 따른 이슈목록 조회
	@GetMapping("{issueSttus}/list")
	public String issueSelect(
		@PathVariable String proSn
		, @PathVariable String issueSttus
		, Model model
		){
		
		//Map<String, String> map = new HashMap<String, String>();
		
		IssueVO iVO = new IssueVO();
		iVO.setProSn(proSn);
		iVO.setIssueSttus(issueSttus);
		
		List<IssueVO> issueList = service.retrieveIssueList(iVO);
		model.addAttribute("issueList",issueList);
		
//		if(issueList.size() >0) {
//			map.put("success", "목록조회성공");
//		}else{
//			map.put("success", "목록조회실패");
//		}
		
		return "jsonView";
	}
	

}
