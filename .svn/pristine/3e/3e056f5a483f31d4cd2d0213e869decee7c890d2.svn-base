package kr.or.ddit.groupware.webhard.ftp;

import java.io.IOException;

import org.apache.commons.net.ftp.FTPClient;

import kr.or.ddit.vo.FTPVO;
import lombok.Data;

@Data
public class FTPServer {
	
	private static String uri="fe80::5615:36d9:2a4c:f329%12";	// 배포 시 생각
	private static String id="lp4";
	private static String pw="java";
	private static FTPClient ftp;
	
	public static FTPClient openFtpServer(FTPVO fVO) {
		
		ftp = new FTPClient();
		ftp.setControlEncoding("UTF-8");
		try {
			ftp.connect(uri);
			ftp.login(id, pw);
		} catch (IOException e) {
			e.printStackTrace();
		}
		return ftp;
	}
	
	public static void closeFtpServer(FTPClient ftp) {
        try {
			ftp.logout();
			ftp.disconnect(); // 접속 끊기
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
