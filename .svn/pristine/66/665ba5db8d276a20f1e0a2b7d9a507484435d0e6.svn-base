<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="kr.or.ddit.admin.reservation.confroom.dao.AdConfRoomDAO">
	
	<!-- 등록된 회의실 전체 목록 조회 -->
	<select id="selectConfRoomList" resultType="ConfRoomVO">
		SELECT
		    conf_room_cd,
		    conf_room_capacity,
		    conf_yn,
		    conf_room_nm
		FROM
		    conf_room
	</select>
	
	<!-- 신규 회의실 등록 -->
	<insert id="insertConfRoom" parameterType="ConfRoomVO">
		<selectKey keyProperty="confRoomCd" order="BEFORE" resultType="String">
			SELECT 
			    TO_CHAR(SYSDATE,'YYMMDD')||'C'||LPAD(CONFROOM_SEQ.NEXTVAL,3,0) AS CONF_ROOM_CD
			FROM DUAL
		</selectKey>
		INSERT INTO conf_room (
		    conf_room_cd,
		    conf_room_capacity,
		    conf_yn,
		    conf_room_nm
		) VALUES (
		     #{confRoomCd, jdbcType=VARCHAR},
		    #{confRoomCapacity, jdbcType=VARCHAR},
		    'Y',
		    #{confRoomNm, jdbcType=VARCHAR}
		)
	</insert>
</mapper>