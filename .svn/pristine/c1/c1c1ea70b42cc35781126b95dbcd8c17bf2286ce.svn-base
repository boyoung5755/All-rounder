@Controller
@RequestMapping("/vehicle")
@Slf4j
public class VehicleController {

	@Inject
	private VehicleService service;
	
	@GetMapping("/vehicleHome")
	public String vehicleHome(Model model) {
		List<CommonVO> timeCd = service.retrieveCommonVReserveTimeCdList();
		model.addAttribute("timeCd", timeCd);
		return "reservation/vehicleHome";
	}
	
	@PostMapping
	@ResponseBody
	public String doPost(@RequestBody VehicleReservationVO reservation, @RequestParam String vhcleUseTimeCd) {
		log.info("reservation ==> " + reservation);
		int insertRslt = service.createReservation(reservation);
		String rslt = "Fail";
		if(insertRslt>0) {
			rslt = "OK";
		}
		return rslt;
	}
}
