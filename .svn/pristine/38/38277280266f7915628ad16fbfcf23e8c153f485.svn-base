@Slf4j
@Controller
@RequestMapping("/mypage")
public class MyPageController {

	@Inject
	private MypageService service;
	
	@GetMapping
	public String mypage() {
		return "mypage/mypageView";  
	}
	
	@GetMapping("info")
	@ResponseBody
	public EmployeeVO mypageInfo(Authentication principal) {
		String empCd = principal.getName();
		log.info("이름이름이름 {}",empCd);
		EmployeeVO mypage = service.selectMypage(empCd);
		
		log.info("리스트 {}",mypage);
		return mypage;
	}
	
	@PutMapping
	@ResponseBody
	public void updateMypage(@RequestBody EmployeeVO empVO) {
		service.updateMypage(empVO);
	}
	
	
	
	
}
