@RequestMapping("/sanctionform/new")
@Controller
public class SanctionFormInsertController {
	
	@Inject
	private SanctionFormService service;
	
	@GetMapping
	public String sanctionForm() {
		return "sanctionform/test";
	}
	
	@PostMapping
	public String sanctionFormInsert(SanctionFormVO sanctionFormVO, RedirectAttributes ra) {
		String viewName = "";
		ServiceResult result = service.creatSanctionForm(sanctionFormVO);
		if(result.equals(ServiceResult.OK)) {
			ra.addFlashAttribute("message", "등록되었습니다!");
			viewName = "redirect:/";
		}else {
			viewName = "redirect:/sanctionform/new";		
		}
		return viewName;
	}
	
}
