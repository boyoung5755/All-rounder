@charset "UTF-8";

body {
	font-family: Arial, sans-serif;
	margin: 0;
	padding: 0;
	background-color: #f4f4f4;
}

#board {
	max-width: 100%;
	margin: 20px auto;
	background-color: #fff;
	padding: 20px;
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.post {
	display: flex;
	margin-bottom: 20px;
}

.img-box {
	flex: 1;
	margin-right: 20px;
}

.img-box img {
	width: 100%;
	height: auto;
}

.txt-box {
	flex: 2;
}

h2 {
	color: #333;
}

p {
	color: #666;
}

.search-form {
	margin-bottom: 20px;
}

#search {
	padding: 5px;
	width: 200px;
}

#searchBtn {
	padding: 5px 10px;
	background-color: #4CAF50;
	color: #fff;
	border: none;
	border-radius: 3px;
	cursor: pointer;
}

.add-post {
	text-align: right;
	margin-top: 20px;
}

#writeBtn {
	padding: 10px 20px;
	background-color: #4CAF50;
	color: #fff;
	border: none;
	border-radius: 3px;
	cursor: pointer;
}

.pagination {
	margin-top: 20px;
	text-align: center;
}

.pagination a {
	display: inline-block;
	padding: 5px 10px;
	margin: 0 5px;
	background-color: #4CAF50;
	color: #fff;
	text-decoration: none;
	border-radius: 3px;
}

.pagination a.active {
	background-color: #45a049;
}

.post_img_wrap{width:100%;}
.post_img_wrap .img-box{width:150px; height:150px; float:left;} 
.post_img_wrap .img-box img{width:100%;} 
.post_img_wrap .txt-box{float:left;}


.comment-section {
    margin-top: 20px;
}

.comment {
    border: 1px solid #ccc;
    padding: 10px;
    margin-bottom: 10px;
}

.replyForm textarea {
    width: 100%;
    margin-bottom: 10px;
}

#commentForm textarea {
    width: 100%;
    margin-bottom: 10px;
}
#comments {
    margin-top: 20px;
}

.comment {
    border: 1px solid #ccc;
    padding: 10px;
    margin-bottom: 10px;
}

.comment p {
    margin: 5px 0;
}

.replyForm textarea,
#commentForm textarea {
    width: 100%;
    margin-bottom: 10px;
}

.comment .replyForm,
.comment #commentForm {
    display: none;
}

.comment .replyBtn,
.comment #submitCommentBtn {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    cursor: pointer;
    border-radius: 5px;
}

.comment .replyBtn:hover,
.comment #submitCommentBtn:hover {
    background-color: #45a049;
}
#editDelete {
    text-align: center;
    margin-top: 20px;
    float: right;
}

#editBtn,
#deleteBtn {
    padding: 10px 20px;
    margin: 0 10px;
    background-color: #4CAF50;
    color: #fff;
    border: none;
    border-radius: 3px;
    cursor: pointer;
}

#editBtn:hover,
#deleteBtn:hover {
    background-color: #45a049;
}
#commentForm {
    margin-top: 20px;
}

#commentForm textarea {
    width: 100%;
    margin-bottom: 10px;
}

#submitCommentBtn {
    padding: 10px 20px;
    background-color: #4CAF50;
    color: #fff;
    border: none;
    border-radius: 3px;
    cursor: pointer;
}

#submitCommentBtn:hover {
    background-color: #45a049;
}



