}

.replyForm {
    /* 대댓글 입력 양식의 스타일 */
    margin-left: 20px; /* 들여쓰기를 통해 댓글과 구분 */
    padding: 10px;
    background-color: #f9f9f9; /* 배경색 지정 */
    border: 1px solid #ddd; /* 테두리 스타일 지정 */
}

