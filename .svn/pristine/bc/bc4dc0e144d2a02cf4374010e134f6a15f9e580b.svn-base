<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://www.springframework.org/security/tags" prefix="sec"%>

<link href="${pageContext.request.contextPath }/resources/css/freeboard/freeboardList.css" rel="stylesheet" />
<div id="boardFreeList">
	<div id="boardHead">
		<h1 style="text-align: center;">Webzine Board</h1>
	
		<div class="search-form">
			<form action="#" method="get">
				<label for="search">검색:</label> <input type="text" id="search" name="search" placeholder="제목 또는 작성자 검색">
				<button type="submit" id="searchBtn">검색</button>
			</form>
		</div>
	</div>	
	<div id="board">
	
		<div class="post">
			<div class="img-box">
				<img src="https://via.placeholder.com/300x300" alt="이미지1">
			</div>
			<div class="txt-box">
				<h2>제목 1</h2>
				<p>글쓴이: 작성자1 | 날짜: 2023-01-01</p>
				<p>내용: 이곳에 게시글 내용이 들어갑니다.</p>
			</div>
		</div>
	
		<div class="post">
			<div class="img-box">
				<img src="https://via.placeholder.com/300x300" alt="이미지2">
			</div>
			<div class="txt-box">
				<h2>제목 2</h2>
				<p>글쓴이: 작성자2 | 날짜: 2023-01-02</p>
				<p>내용: 이곳에 게시글 내용이 들어갑니다.</p>
			</div>
		</div>
	</div>
	<div id="boardFoot">
		<div class="add-post">
			<button id="writeBtn" onclick="location.href='#'">글 작성</button>
		</div>
	
		<div class="freePage">
			<a href="#" class="active">1</a> <a href="#">2</a> <a href="#">3</a>
			<!-- 페이지 번호 추가... -->
		</div>
	</div>
</div>	
<input type="hidden" value="${pageContext.request.contextPath }" id="location" />
<script src="${pageContext.request.contextPath }/resources/js/app/board/free.js"></script>