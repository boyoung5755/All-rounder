@charset "UTF-8";

body {
	font-family: Arial, sans-serif;
	margin: 0;
	padding: 0;
	background-color: #f4f4f4;
}

#board {
	max-width: 100%;
	margin: 20px auto;
	background-color: #fff;
	padding: 20px;
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.post {
	display: flex;
	margin-bottom: 20px;
}

.img-box {
	flex: 1;
	margin-right: 20px;
}

.img-box img {
	width: 100%;
	height: auto;
}

.txt-box {
	flex: 2;
}

h2 {
	color: #333;
}

p {
	color: #666;
}

.search-form {
	margin-bottom: 20px;
}

#search {
	padding: 5px;
	width: 200px;
}

#searchBtn {
	padding: 5px 10px;
	background-color: #4CAF50;
	color: #fff;
	border: none;
	border-radius: 3px;
	cursor: pointer;
}

.add-post {
	text-align: right;
	margin-top: 20px;
}

#writeBtn {
	padding: 10px 20px;
	background-color: #4CAF50;
	color: #fff;
	border: none;
	border-radius: 3px;
	cursor: pointer;
}

.pagination {
	margin-top: 20px;
	text-align: center;
}

.pagination a {
	display: inline-block;
	padding: 5px 10px;
	margin: 0 5px;
	background-color: #4CAF50;
	color: #fff;
	text-decoration: none;
	border-radius: 3px;
}

.pagination a.active {
	background-color: #45a049;
}

.post_img_wrap{width:100%;}
.post_img_wrap .img-box{width:150px; height:150px; float:left;} 
.post_img_wrap .img-box img{width:100%;} 
.post_img_wrap .txt-box{float:left;}
